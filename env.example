# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================
# Copy this file to .env and customize for your local setup

# Database Configuration
# For local development, use a simple password
POSTGRES_PASSWORD=changeme

# Redis Configuration
# Leave empty for local development (no password)
REDIS_PASSWORD=

# JWT Secret (REQUIRED)
# Generate with: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=suzdl9afVGsnwdQSp91cUxS86yu82LCv3XDNOi6LLdg=

# Frontend Configuration
# For local development, these are not critical (Vite proxy handles API routing)
# Frontend runs on http://localhost:3000 and proxies to http://localhost:8080
FRONTEND_API_URL=http://localhost:8080
FRONTEND_DOMAIN=localhost:3000
CONSOLE_DOMAIN=localhost:3000

# API Domain (for Traefik routing)
# For local development, use localhost (HTTP only, no SSL)
# For production, use a real domain for SSL certificates
API_DOMAIN=localhost

# Base Domain for User Apps
# For local development, leave empty or use stackyn.local
# For production, set to your base domain (e.g., staging.stackyn.com)
# This is used to generate subdomains for deployed apps: {app-id}.{APP_BASE_DOMAIN}
APP_BASE_DOMAIN=

# Let's Encrypt Email (for SSL certificates)
# Not needed for local development, but required for production
ACME_EMAIL=admin@stackyn.com

# Email Configuration (optional for local development)
# These are optional - you can use defaults or leave empty
RESEND_API_KEY=
EMAIL_FROM_EMAIL=noreply@stackyn.com

